import argparse
import pathlib

import draw
import lterm
import parse

TOPDIR=pathlib.Path(__file__).resolve().parent

def verbose_reduce(expr, symbols):
    while True:
        print("    ", expr)
        next = expr.reduce_once(symbols)
        if next is None:
            return expr
        expr = next

def flatten_symbols(expr, symbols):
    while True:
        free = expr.variables(True)
        if not free:
            #print(f"flat: {expr}")
            return expr
        #print(f"flattening {expr}")
        subst = None
        for p in symbols.items():
            if p[0] in free:
                subst = p
        if subst == None:
            print(f"Defies flattening: {expr}")
            return expr
        if subst[0] in subst[1].variables(True):
            print(f"Recursive: {expr}")
            return expr
        #print(f"substituting {subst[0]} = {subst[1]}")
        expr = lterm.Apply(lterm.Lambda(subst[0], expr), subst[1])

def optimize(expr):
    while True:
        newexpr = expr.optimize()
        if newexpr is None:
            return expr
        expr = newexpr

def try_file(tf, args):
    print(f"==== {tf}")
    symbols = {}
    directives = parse.parse_directives(tf.read_text())
    drawing_counter = 1
    for d in directives.children:
        if d.data == "let":
            name, value = d.children
            assert name.value not in symbols
            symbols[name.value] = value
            print(f"let {name.value} = {value}")
        elif d.data == "magic":
            name, type = d.children
            assert name.value not in symbols
            symbols[name.value] = lterm.get_magic(name.value, type.value)
            print(f"magic {name.value} {type.value}")
        elif d.data == "draw":
            expr = d.children[0];
            print(f"draw {expr}")
            expr = flatten_symbols(d.children[0], symbols)
            print(f"flattened: {expr}")
            expr = optimize(expr)
            print(f"optimized: {expr}")
            grid = draw.draw_expr(expr)
            grid.print()
            print(f"{expr.size()} bits")
            args.outdir.mkdir(parents=True, exist_ok=True)
            grid.writepbm(args.outdir / f"l_{drawing_counter}.pbm")
            drawing_counter += 1
        elif d.data == "reduce":
            verbose_reduce(d.children[0], symbols)
            print()

def parse_args():
    p = argparse.ArgumentParser(allow_abbrev=False)
    p.add_argument("--outdir", type=pathlib.Path, default=TOPDIR / "out")
    p.add_argument("olcfile", nargs='*', type=pathlib.Path)
    return p.parse_args()

def main():
    args = parse_args()
    for tf in args.olcfile:
        try_file(tf, args)

if __name__ == '__main__':
    main()
